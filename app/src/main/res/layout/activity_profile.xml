<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.adroidtweet.ProfileActivity">

    <RelativeLayout
        android:padding="5dp"
        android:id="@+id/rlUserInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgUserProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_profile"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:padding="5dp"
            android:id="@+id/tvUserNameProfile"
            style="@style/UserNameText"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgUserProfile"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tagline"
            android:padding="5dp"
            android:id="@+id/user_tagline"
            android:layout_below="@+id/tvUserNameProfile"
            android:layout_toRightOf="@+id/imgUserProfile"
            />

    </RelativeLayout>
    <LinearLayout
        android:padding="5dp"
        android:id="@+id/llCount"
        android:layout_below="@+id/rlUserInfo"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Tweets"
            android:id="@+id/tvCountTweets"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Followers"
            android:id="@+id/tvFollowers"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Following"
            android:id="@+id/tvFollowing"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_below="@+id/llCount"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

</RelativeLayout>
